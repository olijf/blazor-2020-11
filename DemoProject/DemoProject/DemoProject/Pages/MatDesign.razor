@page "/mat-design"
@inject IMatToaster Toaster

<h1>MatBlazor</h1>

<MatButton OnClick="@ShowToast">Test</MatButton>

<MatTabGroup>
    <MatTab Label="First">
        First Content
    </MatTab>
    <MatTab Label="Second">
        Second Content
    </MatTab>
    <MatTab>
        <LabelContent>
            Third <MatIcon Icon="@MatIconNames.Close"></MatIcon>
        </LabelContent>
        <ChildContent>
            Third Content
        </ChildContent>
    </MatTab>

</MatTabGroup>

<MatDrawerContainer Style="width: 100vw; height: 100vh;">
    <MatDrawer @bind-Opened="Opened" Mode="MatDrawerMode.Modal">
        Drawer Content
    </MatDrawer>
    <MatDrawerContent>
        <div>
            <MatButton OnClick="@((e) => ButtonClicked())">Open Menu</MatButton>
        </div>
        <p>Page Content</p>
    </MatDrawerContent>
</MatDrawerContainer>

@code {
    public bool Opened { get; set; }

    public void ButtonClicked()
    {
        Opened = !Opened;
    }

    public void ShowToast()
    {
        Toaster.Add("Toast body text", MatToastType.Primary);
        Toaster.Add("Toast body text", MatToastType.Success, "Toast title", "code");
    }
} 